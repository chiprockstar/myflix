- @categories.each do |category|
  %article.video_category
    %header
      %h3= link_to "#{category.category}"
    .videos.row
      - @videos.each do |video|
        - if category.id == video.category_id
          .video.col-sm-2
            = link_to video do
              %img{ src: video.small_cover_url }
